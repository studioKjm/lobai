[client]
default-character-set = utf8mb4

[mysql]
default-character-set = utf8mb4

[mysqld]
# UTF-8 Configuration (MUST BE FIRST)
character-set-client-handshake = FALSE
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci
init_connect = 'SET NAMES utf8mb4 COLLATE utf8mb4_unicode_ci'

# Performance Optimization for Development
# Target: Low memory usage, reasonable performance

# Memory Settings
innodb_buffer_pool_size = 128M        # Reduced from default 128M
innodb_log_buffer_size = 8M           # Reduced from default 16M
max_connections = 50                   # Reduced from default 151

# InnoDB Settings
innodb_flush_log_at_trx_commit = 2    # 0=fast, 1=safe, 2=balanced
innodb_flush_method = O_DIRECT
innodb_file_per_table = 1

# Logging (Minimal for development)
slow_query_log = 0
general_log = 0
log_error_verbosity = 1

# Binary Logging (Disabled for dev)
skip-log-bin

# Thread Cache
thread_cache_size = 16

# Table Cache
table_open_cache = 200

# Temporary Tables
tmp_table_size = 16M
max_heap_table_size = 16M

# Connection Timeout
wait_timeout = 600
interactive_timeout = 600
